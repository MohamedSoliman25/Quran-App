<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MisbahaFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/aboutustitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/changa_bold"
            android:text="السبحة الالكترونية"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/dark_palette"
            android:shadowColor="@color/mid_palette"
            android:shadowDx="-2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/dark_palette"
            android:fontFamily="@font/changa_bold"
            android:text="عدد التسبيحات"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/counter_text"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="16dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:background="@color/mid_palette"
            android:layout_gravity="center"
            android:text="0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
<!--            <ImageView-->
<!--                android:id="@+id/img_reset"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="15dp"-->
<!--                android:layout_marginEnd="90dp"-->
<!--                android:layout_marginBottom="50dp"-->
<!--                android:layout_gravity="end"-->
<!--                android:src="@drawable/misbaha_resetcircle"/>-->
            <ImageView
                android:id="@+id/img_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:src="@drawable/misbaha_countercircle"/>

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="إعاده"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginTop="24dp"
                app:backgroundTint="@null"
                android:fontFamily="@font/changa_bold"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/reset_misbaha_bg"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>